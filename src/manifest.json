{
  "name": "Read Later",
  "version": "3.0.1",
  "manifest_version": 2,
  "description": "Store links to read later.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}